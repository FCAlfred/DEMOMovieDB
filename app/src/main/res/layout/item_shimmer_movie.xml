<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/image_view_item_shimmer_movie"
        android:layout_width="@dimen/item_shimmer_image_width"
        android:layout_height="@dimen/item_shimmer_image_height"
        android:layout_marginStart="@dimen/item_shimmer_image_margin_start"
        android:background="@color/color_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/text_view_item_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_shimmer_text_height"
        android:layout_marginTop="@dimen/item_shimmer_text_margin_top"
        android:background="@color/color_shimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/image_view_item_shimmer_movie"
        app:layout_constraintStart_toStartOf="@+id/image_view_item_shimmer_movie"
        app:layout_constraintTop_toBottomOf="@id/image_view_item_shimmer_movie" />

</androidx.constraintlayout.widget.ConstraintLayout>